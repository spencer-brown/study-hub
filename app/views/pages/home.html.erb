<%= render 'pages/welcome' unless user_signed_in? %>

<% if user_signed_in? %>
	<h1>
		<%= current_user.name %>'s Dashboard
	</h1>
	<% current_user.groups.each do |group| %>
		<h3><%= group.name %></h3>
		<% group.etherpads.each do |etherpad| %>
			<p>
	      <%= link_to etherpad do %>
	        <%= etherpad.name %>
	      <% end %>
	    </p>
		<% end %>
	<% end %>
<% end %>